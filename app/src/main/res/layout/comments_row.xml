<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/profilePic"
            android:src="@drawable/profilepic"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Username"
            android:id="@+id/nameField"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/profilePic"
            android:layout_toEndOf="@+id/profilePic"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Post comment goes here..."
            android:id="@+id/commentField"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="20dp"
            android:layout_height="38dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/likeField"
            android:text="0"
            android:layout_alignBottom="@+id/likeBtn"
            android:layout_alignRight="@+id/commentField"
            android:layout_alignEnd="@+id/commentField" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:id="@+id/likeBtn"
            android:src="@drawable/like"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/likeField"
            android:layout_toStartOf="@+id/likeField" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:id="@+id/dislikeBtn"
            android:src="@drawable/dislike"
            android:paddingBottom="10dp"
            android:layout_alignBottom="@+id/likeField"
            android:layout_toLeftOf="@+id/dislikeField"
            android:layout_toStartOf="@+id/dislikeField" />

        <EditText
            android:layout_width="20dp"
            android:layout_height="38dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/dislikeField"
            android:text="0"
            android:layout_alignBottom="@+id/dislikeBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>