<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_image"
            android:src="@drawable/clickbutton"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_title"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Post title goes here"
            android:textSize="16dp"
            android:textAlignment="textStart" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="By"
            android:id="@+id/byId"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:id="@+id/imageView"
                android:layout_toRightOf="@+id/byId"
                android:src="@drawable/profilepic" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_story"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:text="Post story goes here" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


           <ImageButton
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/like"
               android:id="@+id/addLike_Button"
               android:adjustViewBounds="true"
               android:scaleType="fitCenter"
               android:background="#00ffffff"
               android:layout_marginLeft="10dp"
               android:layout_marginBottom="5dp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/commentButton"
                android:scaleType="fitCenter"
                android:src="@drawable/comments"
                android:layout_marginLeft="40dp"
                android:background="#00ffffff"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/addLike_Button"
                android:layout_toEndOf="@+id/addLike_Button" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/moreButton"
                android:src="@drawable/share"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp" />





        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>